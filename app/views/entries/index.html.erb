<p id="notice"><%= notice %></p>

<h1>Listing Entries</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>User</th>
      <th>Url</th>
      <th>Comment</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.updated_at.to_formatted_s(:simple) %></td>
        <td><%= entry.user.name %></td>
        <td><%= link_to entry.title, entry.url %></td>
        <td><%= entry.comment %></td>
        <td><%= entry.category %></td>
        <td><%= link_to 'Show', entry %></td>
        <% if current_user && entry.user_id == session[:user_id] %>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

